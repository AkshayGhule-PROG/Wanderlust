<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2"></div>
    <br /><br />
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="mb-3">
        <label class="form-label" for="listing-title">Title</label>
        <input
          id="listing-title"
          class="form-control"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
        />
      </div>
      <br />
      <div class="mb-3"></div>
        <label class="form-label" for="listing-description">Description</label>
        <textarea
          id="listing-description"
          class="form-control"
          name="listing[description]"
        ><%= listing.description %></textarea>
      </div>
      <br />
      <div class="mb-3">
        <label class="form-label" for="listing-image">Image URL/Link</label>
        <input
          id="listing-image"
          class="form-control"
          name="listing[image]"
          value="<%= listing.image %>"
          type="text"
        />
      </div>
      <br />
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-label" for="listing-price">Price</label>
          <input
            id="listing-price"
            class="form-control"
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
          />
        </div>
        <br />
        <div class="mb-3 col-md-8">
          <label class="form-label" for="listing-country">Country</label>
          <input
            id="listing-country"
            class="form-control"
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
          />
        </div>
      </div>
      <br />
      <div class="mb-3">
        <label class="form-label" for="listing-location">Location</label>
        <input
          id="listing-location"
          class="form-control"
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
        />
      </div>
      <br />
      <button class="btn btn-dark edit-btn">Edit</button>
    </form>
    <br /><br />
  </div>
</div>
