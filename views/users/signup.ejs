<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3">SignUp On Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate >
            <div class="mb-3">
                <label class="form-label" for="username">username</label>
                <input
                  id="username"
                  class="form-control"
                  name="username"
                  type="text"
                  required
                />
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="email">email</label>
                <input
                  id="email"
                  class="form-control"
                  name="email"
                  type="email"
                  required
                />
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="password">password</label>
                <input
                  id="password"
                  class="form-control"
                  name="password"
                  type="password"
                  required
                />
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>

              <button class="btn btn-primary add-btn " type="submit">SignUp</button>

        </form>
    </div>
</div>