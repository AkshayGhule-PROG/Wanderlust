<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate >
            <div class="mb-3">
                <label class="form-label" for="username">username</label>
                <input
                  id="username"
                  class="form-control"
                  name="username"
                  type="text"
                  required
                />
              </div>
              <div class="mb-3">
                <label class="form-label" for="password">password</label>
                <input
                  id="password"
                  class="form-control"
                  name="password"
                  type="password"
                  required
                />
              </div>

              <button class="btn btn-primary add-btn " type="submit">Login</button>

        </form>
    </div>
</div>